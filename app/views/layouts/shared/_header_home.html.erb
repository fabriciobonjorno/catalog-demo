<div class="header-top bg-light py-3">
  <div class="container">
    <nav class="navbar navbar-light justify-content-between">
      <% if @company.photo_company.attached? %>
        <%= link_to root_path do %>
          <%= image_tag @company.photo_company,title: @company.fantasy_name, style:"max-width: 300px; max-height: 100px;", class: "navbar-brand" %>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          <%= image_tag 'sem-imagem.jpg', style:"max-width: 300px; max-height: 100px;", class: "navbar-brand" %>
        <% end %> 
      <% end %>
      <form class="form-inline">
        <input class="form-control mr-2" type="search" placeholder="Buscar" aria-label="Search">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Buscar</button>
      </form>
      <div>
        <a class="nav-link text-dark btn btn-outline-dark my-2 my-sm-0" href="#" ">
          <i class="fas fa-user"></i>
          Login
        </a>
      </div>
    </nav>
  </div>
</div>
