<div class="container-fluid news justify-content-center">
  <div class="row py-5">
    <div class="card border-0">
      <div class="card-body pt-5 pb-5 text-center ">
        <h3><b>Fique por dentro das novidades</b></h3>
        <p class="pl-0 ml-0 mb-5">Cadastre seu e-mail para receber.</p>
        <div class="row text-center justify-content-center">
          <div class="col-auto">
            <form>
              <div class="form-row align-items-center">
                <div class="col-md-5 col-sm-12">
                  <input type="text" class="form-control mb-2" id="inlineFormInput" placeholder="Seu nome">
                </div>
                <div class="col-md-5 col-sm-12">
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Seu melhor email">
                  </div>
                </div>
                <div class="col-md-2 col-sm-12">
                  <button type="submit" class="btn btn-success btn-sm mb-2">Inscrever</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <div class="row justify-content-around mb-0 pt-2 pb-5 ">
      <div class="col-12 text-center">
        <div class="row justify-content-center">
          <div class="col-12 font-italic align-items-center mt-md-3 mt-4">
            <% if @company.photo_company.attached? %>
              <%= link_to root_path do %>
                <h5><span> <%= image_tag @company.photo_company, class: "img-fluid mb-1", style:"max-width: 300px; max-height: 150px;" %> </span></h5>
              <% end %>
            <% else %>
              <%= link_to root_path do %>
                <%= image_tag 'sem-imagem.jpg', class: "img-fluid mb-1", style: "max-height: 150px;" %>
              <% end %>
            <% end %>
            <p class="social mt-md-3 mt-2">
              <span><i class="fab fa-facebook-square"></i>
              </span> <span><i class="fab fa-linkedin"></i>
              </span> <span><i class="fab fa-instagram-square"></i></span>
            </span> <span><i class="fab fa-youtube-square"></i></span>
          </p>
          <small class="copy-rights cursor-pointer">&#9400;  <%= Date.current.year %> - <%= @company.fantasy_name %></a></small><br>
        <small class="copy-rights cursor-pointer">All rights reserved. Created by <a href="https://meucatalogo.art.br/" style="color: #fff" target="_blank">Meu Catalogo</a> </small>
      </div>
    </div>
  </div>
</div>
</footer>
</div>
<% if @company.contact_home.present? %>
  <div class="help-button-wrapper">
    <ul class="help-list">
      <% if @company.financial_contact.present? %>
        <li><a href="https://api.whatsapp.com/send?phone=55<%= @company.financial_contact.phone %>&text=<%= @company.financial_contact.message %>" target="_blank"><i class="fas fa-dollar-sign"></i> Finaceiro</a></li>
      <% end %>
      <% if @company.logistic_contact.present? %>
        <li><a href="https://api.whatsapp.com/send?phone=55<%= @company.logistic_contact.phone %>&text=<%= @company.logistic_contact.message %>" target="_blank"><i class="fas fa-truck-moving"></i> Logistica</a></li>
      <% end %>
      <% if @company.commercial_contact.present? %>
        <li><a href="https://api.whatsapp.com/send?phone=55<%= @company.commercial_contact.phone %>&text=<%= @company.commercial_contact.message %>" target="_blank"><i class="fas fa-cart-plus"></i> Comercial</a></li>
      <% end %>
      <% if @company.administrative_contact.present? %>
        <li><a href="https://api.whatsapp.com/send?phone=55<%= @company.administrative_contact.phone %>&text=<%= @company.administrative_contact.message %>!" target="_blank"><i class="fas fa-digital-tachograph"></i> Administrativo</a></li>
      <% end %>
    </ul>
    <button class="help-button">
      <span><i class="fab fa-whatsapp"></i></span>
    </button>
  </div>
<% end %>
<script>
  $(".help-button").on("click", function() {
      $(".help-button-wrapper").toggleClass("expanded");
  });
</script>
