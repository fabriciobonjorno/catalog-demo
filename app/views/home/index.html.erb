<div class="header-top bg-light py-3">
  <div class="container">
    <nav class="navbar navbar-light justify-content-between">
      <%= image_tag 'logo.png', style:"max-width: 300px; max-height: 100px;", class: "navbar-brand" %>
      <form class="form-inline">
        <input class="form-control mr-2" type="search" placeholder="Buscar" aria-label="Search">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Buscar</button>
      </form>
      <div>
        <button class="btn btn-outline-dark my-2 my-sm-0">
          <i class="fas fa-user"></i>
          Login
        </button>
      </div>
    </nav>
  </div>
</div>
<section class="container mt-5">
  <h3 class="text-muted mt-5 mb-3">Conheça nossos lançamentos:</h3>
  <section class="container-product mt-" style=" ">
    <% @products.each do |product| %>
      <% if product.active == true %>
        <figure>
          <div class="eng-prods">
            <% if product.photo_product.attached? %>
              <a>
                <%= image_tag product.photo_product,title: product.description %>
              </a>
            <% else %>
              <a>
                <%= image_tag 'sem-imagem.jpg', class:"img-fluid img-item" %>
              </a>
            <% end %>
            <div class="prod-description">  <%= product.description %> </div>
          </div>
        </figure>
      <% end %>
    <% end %>
  </section>
</section>
