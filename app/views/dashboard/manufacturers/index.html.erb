  //document.addEventListener('turbolinks:load', function() {
    $('#manufacturerTable').DataTable({
    language: {
      url: '/pt_br.json'
    }
    });
  //});
  
  function editshow() {
  document.getElementById("editManufacturer").style.display = "flex";
  }
</script>
