background-color: ##{@layoutpdf.color_header};;
margin-top: -20px; "> 

   <div class="header-pdf" >
      <div class="header-img">
      <% @companies.each do |comp| %>
         <% if comp.photo_company.attached? %>
            <%= image_tag comp.photo_company, class: "img-fluid", width: '350', style:"max-width: 100px;
            max-height: 139px;"%>
            <% else %>
            <%= image_tag 'sem-imagem.jpg', class:"img-fluid img-item", style:"max-width: 100px;
            max-height: 139px;" %>
         <% end %>
      <% end %>
      </div>
      <div class="header-title">
       <p style="color:white;font-weight:700;margin-top:10px;margin-left:20px;"> Demonstrativo de Produtos </p> 
      </div>

   </div>  
</section>