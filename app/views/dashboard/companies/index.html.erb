<div class="content-wrapper">
  <%= render partial: "dashboard/shared/breadcrumb", locals: {title: "Empresa"} %>
  <section class="content">
    <div class="container-fluid">
      <div class="table-responsive">
        <table id="companyTable" class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Razão Social</th>
              <th scope="col">Nome Fantasia</th>
              <th scope="col">CNPJ</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <th scope="row"><%= company.id %></th>
                <td><%= company.social_name %></td>
                <td><%= company.fantasy_name %></td>
                <td><%= company.cnpj %></td>
                <td>
                  <%= link_to edit_dashboard_company_path(company), class:"btn btn-info", data: {toggle:"tooltip", placement:"top"}, title:"Editar dados" do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
</div>
<script>
  document.addEventListener('turbolinks:load', function() {
    $('#companyTable').DataTable({
    language: {
      url: '/pt_br.json'
    }
    });
  });
</script>
