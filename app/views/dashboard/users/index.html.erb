<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <%= render partial: "dashboard/shared/breadcrumb", locals: {title: "Usuários"} %>
  <!-- /.content-header -->
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Info boxes -->
      <div class="row">
        <div class="col-12 col-sm-4 col-md-4">
          <div id="newManufacturer" class="info-box">
            <%= link_to new_dashboard_user_path, class:"btn btn-app bg-success mt-2" do %>
              <i class="far fa-plus-square"></i> Adicionar
            <% end %>
          </div>
          <!-- /.info-box -->
        </div>
      </div>
      <div class="table-responsive">
        <table id="userTable" class="table table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Email</th>
              <th scope="col">Perfil</th>
              <th scope="col">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <%= user.admin? ? 'Administrador' : 'Moderador' %>
                </td>
                <td>
                  <%= link_to edit_dashboard_user_path(user), class:"btn btn-info", data: {toggle:"tooltip", placement:"top"}, title:"Editar Grupo" do %>
                    <i class="far fa-edit"></i>
                  <% end %>
                  <%= link_to dashboard_user_path(user), class:"btn btn-danger", method: :delete, data:
                                                         {confirm: "Tem certeza disso? Ao excluir o Fabricante excluira todos os produtos vinculados",
                                                         toggle:"tooltip", placement:"top"}, title:"Excluir Grupo" do %>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.row -->
    </div>
    <!--/. container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Main Footer -->
</div>
<script>
  document.addEventListener('turbolinks:load', function() {
    $('#userTable').DataTable();
  });
</script>
